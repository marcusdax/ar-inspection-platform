{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./types",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/services/*": ["services/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/contexts/*": ["contexts/*"],
      "@/hooks/*": ["hooks/*"],
      "@/assets/*": ["assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["react", "react-native", "jest", "detox"]
  },
  "include": [
    "src/**/*",
    "src/**/*.{ts,tsx,js,jsx}",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "build",
    "dist",
    "src/**/*.test.{ts,tsx,js,jsx}",
    "src/**/*.stories.{ts,tsx,js,jsx}",
    "src/**/*.spec.{ts,tsx,js,jsx}"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}