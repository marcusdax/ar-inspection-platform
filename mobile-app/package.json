{
  "name": "ar-inspection-platform-mobile",
  "version": "1.0.0",
  "description": "AR Inspection Platform - Mobile App for Gig Users",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios", 
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "react-native clean-project-auto",
    "pod-install": "cd ios && pod install",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "xcodebuild -workspace ios/ARInspection.xcworkspace -scheme ARInspection -configuration Release -destination generic/platform=iOS"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-screens": "^3.22.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "react-native-webrtc": "^111.0.1",
    "react-native-arkit": "^0.2.0",
    "react-native-camera": "^4.2.1",
    "react-native-fs": "^2.20.0",
    "react-native-sqlite-storage": "^6.0.1",
    "react-native-permissions": "^3.9.3",
    "@react-native-async-storage/async-storage": "^1.19.3",
    "react-native-vector-icons": "^10.0.3",
    "react-native-gesture-handler": "^2.12.1",
    "react-native-reanimated": "^3.3.0",
    "react-native-safe-area-context": "^4.7.1",
    "axios": "^1.6.2",
    "react-native-uuid": "^2.0.1",
    "@react-native-community/netinfo": "^9.4.1",
    "@react-native-camera-roll/camera-roll": "^5.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "metro-react-native-babel-preset": "^0.76.8",
    "metro-react-native-babel-transformer": "^0.76.8",
    "metro-config": "^0.76.8",
    "metro-react-native-babel-preset": "^0.76.8",
    "metro": "^0.76.8",
    "@react-native/metro-config": "^0.72.6",
    "jest": "^29.5.0",
    "@testing-library/react-native": "^12.2.2",
    "@testing-library/jest-native": "^5.4.3",
    "react-test-renderer": "18.2.0",
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.6",
    "@types/react-test-renderer": "^18.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "react-native": {
    "unimodules": ["react-native-reanimated", "react-native-gesture-handler"],
    "architectures": [
      "arm64-v8a",
      "x86_64"
    ]
  }
}